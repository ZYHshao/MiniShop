/* components/search-bar/index.wxss */
@import '../../utils/iconFont/iconfont.wxss';
.title {
    width: 100%;
    text-align: center;
    margin-top: 30px;
    color: white;
    font-size: 15px;
    font-weight: bold;
}

.searchBar {
    margin-top: 10px;
    border: solid 2px #c94732;
    height: 30px;
    border-radius: 15px;
    margin-left: 15px;
    margin-right: 15px;
    background-color: white;
    display: flex;
    flex-direction: row;
}

.icon {
    font-size: 18px;
    line-height: 30px;
    color: gray;
    margin-left: 5px;
}

.input {
    width: 60%;
    height: 30px;
    margin-left: 10px;
    font-size: 13px;
}

.searchBtn {
    position: absolute;
    right: 18px;
    line-height: 28px;
    margin-top: 1px;
    width: 60px;
    background-color: #dd3f2c;
    color: white;
    text-align: center;
    border-radius: 15px;
}